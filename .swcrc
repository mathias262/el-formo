{
    "minify": true,
    "test": [
        ".*.ts$",
        ".*.tsx$"
    ],
    "jsc": {
        "loose": true,
        "parser": {
            "syntax": "typescript",
            "tsx": true,
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "react": {
                "pragma": "React.createElement",
                "pragmaFrag": "React.Fragment",
                "throwIfNamespace": true
            }
        }
    }
}
